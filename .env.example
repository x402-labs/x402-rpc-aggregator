# x402-RPC-Aggregator Environment Configuration

# ===========================================
# FACILITATOR CONFIGURATION (Choose One)
# ===========================================

# Facilitator Type: "self-hosted" | "payai" | "auto"
X402_FACILITATOR_TYPE=auto
X402_WALLET=your_receiving_wallet_address_here

# For Self-Hosted or Auto mode
SOLANA_PRIVATE_KEY=your_base58_solana_private_key_here
EVM_PRIVATE_KEY=0xyour_evm_private_key_here

# For PayAI or Auto mode (default URL provided)
PAYAI_FACILITATOR_URL=https://facilitator.payai.network

# Fallback Options
X402_ENABLE_FALLBACK=true
X402_FALLBACK_TYPE=payai

# ===========================================
# HELIUS RPC (Required for Demo Pages)
# ===========================================

# Helius RPC endpoint for balance checks and transactions
# Get your API key from: https://helius.dev
# This is kept server-side and never exposed to browsers
HELIUS_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_HELIUS_KEY

# ===========================================
# RPC PROVIDER URLS (Optional)
# ===========================================

# Triton.one (Premium Solana RPC)
TRITON_RPC_URL=

# QuickNode URLs
QUICKNODE_SOLANA_URL=
QUICKNODE_ETH_URL=
QUICKNODE_BASE_URL=

# Alchemy URLs
ALCHEMY_ETH_URL=
ALCHEMY_BASE_URL=

# Infura URL
INFURA_ETH_URL=

# Solana RPC for Facilitator
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# ===========================================
# SERVER CONFIGURATION
# ===========================================

PORT=3000
NODE_ENV=production
